{
    "swagger": "2.0",
    "info": {
        "version": "0.5.0",
        "title": "FAIR Data Point",
        "description": "Provides machine-readable descriptions (metadata) about catalogs, datasets and distributions available through the FDP.",
        "contact": {
            "name": "Netherlands eScience Center",
            "url": "https://www.esciencecenter.nl",
            "email": "a.kuzniar@esciencecenter.nl"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "schemes": [
        "http"
    ],
    "basePath": "/",
    "produces": [
        "text/turtle",
        "application/rdf+xml",
        "application/ld+json",
        "application/n-triples"  
    ],
    "paths": {
        "/fdp": {
            "get": {
                "summary": "FDP metadata",
                "description": "This entry point returns information about FDP itself.",
                "responses": {
                    "200": {
                        "schema": {
                            "type": "string"
                        },
                        "description": "Success"
                    }
                }
            }
        },
        "/catalog/{catalogID}": {
            "get": {
                "summary": "Catalog metadata",
                "description": "This entry point returns information about datasets available in a catalog.",
                "parameters": [
                    {
                        "name": "catalogID",
                        "in": "path",
                        "description": "catalogID",
                        "type": "string",
                        "default": "astron-01",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "string"
                        },
                        "description": "Success"
                    }
                }
            }
        },
        "/dataset/{datasetID}": {
            "get": {
                "summary": "Dataset metadata",
                "description": "This entry point returns information about a dataset.",
                "parameters": [
                    {
                        "name": "datasetID",
                        "in": "path",
                        "description": "datasetID",
                        "type": "string",
                        "default": "lofar-lta-dbview",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "string"
                        },
                        "description": "Success"
                    }
                }
            }
        },
        "/distribution/{distributionID}": {
            "get": {
                "summary": "Distribution metadata",
                "description": "This entry point returns information about a distribution of a dataset.",
                "parameters": [
                    {
                        "name": "distributionID",
                        "in": "path",
                        "description": "distributionID",
                        "type": "string",
                        "default": "lofar-lta-dbview-sparql",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "string"
                        },
                        "description": "Success"
                    }
                }
            }
        }
    }
}
